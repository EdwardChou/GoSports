<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/view_sport_type_tv_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#F0EFED"
        android:gravity="center"
        android:text="Select Sport Type"
        android:textSize="12sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@drawable/numberpicker_selection_divider" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0EFED"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp" >

        <hk.edu.cuhk.gosports.view.wheelview.WheelView
            android:id="@+id/view_sport_type_wv"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_unit"
        android:background="@drawable/numberpicker_selection_divider" />

    <LinearLayout
        android:id="@+id/view_sport_type_btns_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/view_sport_type_cancel_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#F0EFED"
            android:text="Cancel"
            android:textSize="10sp" />

        <View
            android:layout_width="@dimen/dp_unit"
            android:layout_height="match_parent"
            android:background="@drawable/numberpicker_selection_divider" />

        <Button
            android:id="@+id/view_sport_type_sure_btn"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="#F0EFED"
            android:text="Ok"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>