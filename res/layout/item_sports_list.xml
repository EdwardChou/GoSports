<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_sports_list_bg"
        android:padding="@dimen/dp_normal_middle_size" >

        <LinearLayout
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_sports_list_username_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLength="12"
                android:text="Rosanaggggggggggggggggggggggggggggg"
                android:textColor="@drawable/soft_blue"
                android:textSize="@dimen/font_middle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="launched the event"
                android:textColor="@drawable/soft_black"
                android:textSize="@dimen/font_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_info"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_sports_list_join_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:background="@drawable/deep_blue"
                android:padding="4dp"
                android:text="58"
                android:textColor="@drawable/white"
                android:textSize="@dimen/font_middle" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_info"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/item_sports_list_event_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Basketball on Tuesday"
                    android:textColor="@drawable/dark_black"
                    android:textSize="@dimen/font_normal" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="46dp" >

                    <TextView
                        android:id="@+id/item_sports_list_start_time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_access_time_grey600_18dp"
                        android:gravity="center_vertical"
                        android:text="Sep 18, 19:00 Tue."
                        android:textColor="@drawable/soft_black"
                        android:textSize="@dimen/font_small" />

                    <TextView
                        android:id="@+id/item_sports_list_location_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/item_sports_list_start_time_tv"
                        android:layout_centerVertical="true"
                        android:drawableLeft="@drawable/ic_location_on_grey600_18dp"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="CUHK, Shatin, Hong Kong"
                        android:textColor="@drawable/soft_black"
                        android:textSize="@dimen/font_small" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal" >

                        <ImageButton
                            android:id="@+id/item_sports_list_go2map_imbtn"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginTop="2dp"
                            android:background="@drawable/huodongliebiao_22" />

                        <TextView
                            android:id="@+id/item_sports_list_comment_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="5dp"
                            android:text="0"
                            android:textColor="@drawable/dark_black"
                            android:textSize="@dimen/font_small"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>