<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_bg_mask"
        android:orientation="vertical"
        android:paddingTop="80dp" >

        <ImageView
            android:id="@+id/activity_login_logo_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="60dip"
            android:contentDescription="@string/app_name"
            android:src="@drawable/pin_login" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="44.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <EditText
                android:id="@+id/activity_login_account_et"
                style="@style/login_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/denglu128001_07"
                android:imeOptions="actionGo"
                android:inputType="textEmailAddress"
                android:paddingLeft="50dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/activity_login_clear_aacount_btn"
                style="@style/input_del"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="right|center"
                android:layout_marginRight="10.0dip"
                android:visibility="invisible" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="46.0dip"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <EditText
                android:id="@+id/activity_login_password_et"
                style="@style/login_field"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/denglu128001_10"
                android:gravity="center_vertical"
                android:imeOptions="actionGo"
                android:inputType="textPassword"
                android:paddingBottom="4.0dip"
                android:paddingLeft="50dp"
                android:singleLine="true" />

            <Button
                android:id="@+id/activity_login_clear_password_btn"
                style="@style/input_del"
                android:layout_width="20.0dip"
                android:layout_height="20.0dip"
                android:layout_gravity="right|center"
                android:layout_marginRight="10.0dip"
                android:visibility="invisible" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="1dip"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip" >

            <Button
                android:id="@+id/activity_login_login_btn"
                style="@style/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="15.0dip" />

            <Button
                android:id="@+id/activity_login_register_btn"
                style="@style/btn_login"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="15.0dip"
                android:background="@drawable/dengluqidongzhuce_05" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>