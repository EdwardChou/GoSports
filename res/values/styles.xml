<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="rating_bar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/rating_bar</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:maxHeight">30dp</item>
    </style>

    <style name="login_field">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textColorHint">#ffa0a0a0</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingTop">0.0dip</item>
        <item name="android:paddingRight">40.0dip</item>
        <item name="android:paddingBottom">0.0dip</item>
    </style>

    <style name="input_del">
        <item name="android:background">@drawable/login_input_del</item>
        <item name="android:layout_width">20.0dip</item>
        <item name="android:layout_height">20.0dip</item>
    </style>

    <style name="btn_base">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@drawable/disable_black</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_normal</item>
        <item name="android:paddingLeft">10.0dip</item>
        <item name="android:paddingRight">10.0dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:shadowColor">#ffffffff</item>
        <item name="android:shadowDy">1.0</item>
        <item name="android:shadowRadius">1.0</item>
    </style>

    <style name="btn_login" parent="@style/btn_base">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">#999999</item>
        <item name="android:background">@drawable/dengluqidongzhuce_03</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_marginLeft">10.0dip</item>
        <item name="android:layout_marginRight">10.0dip</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDy">-1.0</item>
    </style>

    <style name="MyTheme_Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:background">@null</item>
        <item name="android:windowBackground">@drawable/dialog_full_holo_light</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:buttonStyle">@style/DialogButton</item>
    </style>

    <style name="DialogButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/btn_default_dialog</item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">64dip</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>